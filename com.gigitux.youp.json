{
  "app-id": "com.gigitux.youp",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.38",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "youp",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--talk-name=org.freedesktop.Notifications",
    "--device=dri",
    "--socket=pulseaudio",
    "--filesystem=home"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUSTFLAGS": "--remap-path-prefix =../",
      "CARGO_HOME": "/run/build/youp/cargo"
    }
  },
  "modules": [
    "shared-modules/libappindicator/libappindicator-gtk3-introspection-12.10.json",
    {
      "name": "youp",
      "buildsystem": "meson",
      "config-opts": ["-Dbuildtype=release"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/gigitux/youpforwhatsapp/releases/download/2.0/youp-2.0.0.tar.xz",
          "sha256": "b76543e917a2288fa6f603a5e9fa12a9be0a19c7fe1c4257fd88b0594d434966"
        }
      ]
    }
  ]
}
